<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_color"
        android:orientation="vertical"
        tools:context=".login_now.LoginNowActivity">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/splahs" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"

            android:layout_margin="@dimen/_10sdp"

            android:imeOptions="actionNext"
            />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:layout_margin="@dimen/_10sdp"
            android:hint="password"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/forgetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_180sdp"
            android:gravity="center"
            android:text="Forget Password?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/_195sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@color/black" />
        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="@dimen/_5sdp"
                android:text="Don't have a account?"
                android:textColor="@color/gray_text"
                android:textAlignment="center"
                android:textSize="@dimen/_14ssp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/register"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="@font/main_font"
                android:textSize="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>
        <View
            android:background="@color/black"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_200sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <ImageView

            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/ic_round_next" />


    </LinearLayout>

</layout>