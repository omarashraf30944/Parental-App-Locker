<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/main_color"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info.InfoActivity">

    <TextView
        android:text=" - About Us - "
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:text="This application was implemented by a group of students of the Higher Technological Institute 10th of Ramadan, Department of Computer Science as  graduation project"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textSize="@dimen/_18ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text=" 2022 "
        android:layout_marginTop="@dimen/_70sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>